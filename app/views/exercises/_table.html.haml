%table.table.table-bordered.table-hover
  %thread
    %tr
      %th= 'Exercises'
      %th= 'Sets'
      %th= 'Reps'
      %th
      %th

  %tbody
    - @workout.exercises.each do |exercise|
      %tr{id: "exercise_#{exercise.id}"}
        %td= exercise.title
        %td= exercise.sets
        %td= exercise.reps
        %td= link_to t('.edit'), edit_exercise_path(exercise)
        %td= link_to t('.delete'), exercise, :method => :delete, :data => { :confirm => t('.delete_confirm') }, :remote => true