= form_for @exercise do |f|
  - if @exercise.errors.any?
    #error_explanation
      %h2= "#{pluralize(@exercise.errors.count, "error")} prohibited this exercise from being saved:"
      %ul
        - @exercise.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :workout
    %p= @exercise.workout.workout_type
    = f.hidden_field :workout_id, value: @exercise.workout.id
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :sets
    = f.number_field :sets, min: '0'
  .field
    = f.label :reps
    = f.number_field :reps, min: '0'
  .actions
    = f.submit t('.save')
