%h1= t('.index_title')

%table
  %thead
    %tr
      %th= t('.index_workout')
      %th= t('.index_workout_title')
      %th= t('.index_sets')
      %th= t('.index_reps')
      %th
      %th
      %th

  %tbody
    - @exercises.each do |exercise|
      %tr
        %td= exercise.workout.workout_type
        %td= exercise.title
        %td= exercise.sets
        %td= exercise.reps
        %td= link_to t('.show'), exercise
        %td= link_to t('.edit'), edit_exercise_path(exercise)
        %td= link_to t('.delete'), exercise, method: :delete, data: { confirm: t('.delete_confirm') }

%br

= link_to t('.new_exercise'), new_exercise_path
