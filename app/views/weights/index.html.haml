%h2 Listing weights

%table.table.table-bordered.table-hover
  %thead
    %tr
      %th Date
      %th Weight
      %th
      %th
      %th

  %tbody
    - @weights.reverse_each do |weight|
      %tr
        %td= weight.date
        %td= weight.weight
        %td= link_to 'Details', weight
        %td= link_to 'Edit', edit_weight_path(weight)
        %td= link_to 'Destroy', weight, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'Add New Weight', new_weight_path
