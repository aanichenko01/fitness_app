= form_for @workout do |f|
  - if @workout.errors.any?
    #error_explanation
      %h2= "#{pluralize(@workout.errors.count, "error")} prohibited this workout from being saved:"
      %ul
        - @workout.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :workout_type
    = f.text_field :workout_type
  .field
    = f.label :duration
    = f.number_field :duration, min: '0'
  .field
    = f.label :calories
    = f.number_field :calories, min: '0'
  .actions
    = f.submit t('.save')
