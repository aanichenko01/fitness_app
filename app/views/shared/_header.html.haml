
%header.container-fluid.text-center
    %nav.navbar.navbar-inverse
        .container-fluid
            .navbar-header
                %button.navbar-toggle{'type' => 'button', 'data-toggle' => 'collapse', 'data-target' => '#myNavbar'}
                    %span.icon-bar
                    %span.icon-bar
                    %span.icon-bar
                %a.navbar-brand{'href' => '/home'}= t('.title')
            #myNavbar.collapse.navbar-collapse
                %ul.nav.navbar-nav.navbar
                    %li=link_to t('.nav_workouts'), workouts_path
                    %li=link_to t('.nav_weights'), weights_path
                    %li=link_to t('.nav_summary'), summary_path
                %ul.nav.navbar-nav.navbar-right
                    %li
                        - if user_signed_in?
                            %li= link_to "#{current_user.email}", edit_user_registration_path
                            %li= link_to t('.logout'), destroy_user_session_path, method: 'delete'
                        - else
                            %li= link_to t('.login'), new_user_session_path
                            %li= link_to t('.sign_up'), new_user_registration_path
    %br
    - flash.each do |key, value|
        = content_tag :div, content_tag(:p, value), id: "#{key}" unless value.blank?