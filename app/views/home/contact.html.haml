%h1= t('.title')
%br
%br
%p= t('.contact_us')

= form_tag request_contact_path, method: 'post', id: "contact_form" do


    %form{'action' => '/action_page.php'}
        .form-group
            = label_tag :name, t('.name')
            = text_field_tag :name, '', title: t('.enter_name'), class: 'form-control'

        .form-group
            = label_tag :email, t('.email')
            = email_field_tag :email, '', title: t('.enter_email'), class: 'form-control'

        .form-group
            = label_tag :telephone, t('.telephone')
            = telephone_field_tag :telephone, '', title: t('.enter_telephone'), class: 'form-control'

        .form-group
            = label_tag :message, t('.message')
            = text_field_tag :message, '', title: t('.enter_message'),class: 'form-control input-lg'

        .form-group
            .col-md-9.col-md-offset-3
                #messages

        .form-group
            = submit_tag t('.send'), class: 'btn btn-default', id: 'mailer_button'